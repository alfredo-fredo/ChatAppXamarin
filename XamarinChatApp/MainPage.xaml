<?xml version="1.0" encoding="utf-8"?>
<ContentPage BackgroundColor="WhiteSmoke" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="XamarinChatApp.MainPage">
    <StackLayout>
    <SearchBar Placeholder="Search" BackgroundColor="Transparent" />
<ListView x:Name="MainListView">
    <ListView.ItemTemplate>
        <DataTemplate>
           <ViewCell>
               <StackLayout Orientation="Vertical">
                       <Image Source="{Binding ProfilePicture}"/>
                       <Label Text="{Binding Name}"/>  
                       <Label Text="{Binding MessageHint}"/>  
                       <Label Text="{Binding MessageTime}"/>  
               </StackLayout> 
           </ViewCell>
        </DataTemplate>
    </ListView.ItemTemplate>
</ListView>
    </StackLayout>
</ContentPage>